<Window x:Class="ProyectoCursos.Vistas.MainSecretario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoCursos.Vistas"
        mc:Ignorable="d"
        Title="MainSecretario" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="68,52,0,0" TextWrapping="Wrap" Text="¿Que dese hacer hoy?" VerticalAlignment="Top" FontFamily="Rockwell Extra Bold" FontSize="24"/>
