        <Button x:Name="btnAgregarCursos" Content="Agregar Cursos" HorizontalAlignment="Left" Margin="56,324,0,0" VerticalAlignment="Top" Width="173" Height="58" Click="btnAgregarCursos_Click"/>
        <Button x:Name="btnEliminarCursos" Content="Eliminar Curso" HorizontalAlignment="Left" Margin="471,324,0,0" VerticalAlignment="Top" Width="192" Height="58" Click="btnEliminarCursos_Click"/>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="330,367,0,0" VerticalAlignment="Top" Width="75" Click="btnRegresar_Click"/>

    </Grid>
</Window>
